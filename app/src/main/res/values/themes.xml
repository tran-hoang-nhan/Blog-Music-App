<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.BlogMusic" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#213448</item>
        <item name="colorPrimaryVariant">#547792</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#ECEFCA</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/mulish_medium</item>
    </style>


    <style name="LeftRoundedImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>


    <style name="CircleImageViewStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>


    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#806D40</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabTextColor">#000000</item>
        <item name="tabSelectedTextColor">#A5CC6B</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>
    </style>


    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>