<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reviewDetailScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Subtitle -->
        <TextView
            android:id="@+id/detailSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Album Title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/subtitleMediaContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- Summary -->
        <TextView
            android:id="@+id/detailSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Summary"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/summaryMediaContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- Tracklist -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tracklist:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/detailTracklist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tracklist content"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/tracklistMediaContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- Main Content -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Highlights"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/detailMaincontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Highlights content"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/mainMediaContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- Score -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/detailScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginBottom="12dp" />

        <!-- Conclusion -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conclusion:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/detailConclusion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conclusion content"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/conclusionMediaContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- Tags -->
        <TextView
            android:id="@+id/detailTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tags: rock, indie, alternative"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:id="@+id/tagsMediaContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
